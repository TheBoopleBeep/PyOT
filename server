import socket
import threading
from datetime import datetime
HEADER = 64
PORT = 1234
SERVER = socket.gethostbyname(socket.gethostname())
print(SERVER)
ADDR = (SERVER,PORT)
FORMAT = 'utf-8'
DISCONNECT_MESSAGE = "!DISCO"

server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server.bind(ADDR)
def handle_client(conn,addr):
    print(f"[NEW CONNECTION] {addr} connected")
    connected = True
    while connected:
        dt = datetime.now().strftime("%d/%m/%Y %H:%M:%S")
        msg_length = conn.recv(HEADER).decode(FORMAT)
        if msg_length:
            msg_length = int(msg_length)
            msg = conn.recv(msg_length).decode(FORMAT)
            print(f"[{addr}] [{dt}]{msg}")
            if msg == DISCONNECT_MESSAGE:
                print(f"{addr} disconnected at {dt}\n[ACTIVE CONNECTIONS]{threading.activeCount()-1}")
                conn.send(("!DISCO acknowledged at "+dt).encode(FORMAT))
                break
            conn.send(("Message received at "+dt).encode(FORMAT))
    conn.close()




def start():
    server.listen()
    print("Server is listening on "+SERVER,PORT,'\n')
    while True:
        conn,addr = server.accept()
        thread = threading.Thread(target=handle_client,args=(conn,addr))
        thread.start()
        print(f"\n[ACTIVE CONNECTIONS]{threading.activeCount()-1}")
print("Server is starting")
start()